<link rel="stylesheet" href="/css/signin_signup.css">





<section id="signin-page">
<!--eh-->




    <header>

        <h1>Docent&nbsp;Webscan</h1>
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <div class="spinner-grow" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </header>


    <form action="/users/create-session" method="POST" id="signin-form">



        <div class="d-flex flex-column flex">



            <div class="p-2 row mb-3 d-flex flex-nowrap">

                <label for="inputEmail3" class="col-sm-2 col-form-label">Email&nbsp;&nbsp;&nbsp;&emsp;&ensp;:</label>
                <div class="col-sm-10" style="width:140px">
                    <input name="email" type="email" class="form-control mg-left-5" id="inputEmail3"
                        placeholder="xyz@123.com" required>
                </div>


            </div>
            <div class="p-2 row mb-3 d-flex flex-nowrap">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Password&ensp;:</label>
                <div class="col-sm-10" style="width:140px">
                    <input name="password" type="password" class="form-control  mg-left-5" id="inputPassword3"
                        placeholder="********" required>
                </div>
            </div>




            <div id="signin-submit-container">
                <div id="signin-button">
                    <button type="submit">Sign in</button>
                 </div>


                 <div style="width:140px;" id="forgot-password"><button >Forgot&nbsp;Password?</button></div>




            </div>

            
        </div>

    </form>


    <form id="search-email" action="/users/forgot-password/find-email" method="POST">

        <input type="email" name="email" id="email" placeholder="Enter email id" required>
        <input type="submit" value="Submit">

    </form>



    <div id="divider-container">

        <!-- <span>x</span> -->
        <p id="x1">x</p>

        <div class="line-break"> </div>

        <p>x&nbsp;&nbsp;<span>or</span>&nbsp;&nbsp;x</p>

        <div class="line-break"></div>


        <p id="x2">x</p>

 
    </div>






  


    <div id="google-signin" class="d-grid gap-2">

        <button onclick="window.location.href='/users/auth/google';"  type="button">
            <i class="fa-brands fa-google fa-fade"></i>
             Continue with Google</button>
    </div>


    



